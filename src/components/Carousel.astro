    carousel.style.transform = `rotateY(${angle}deg)`;
    updateFocus();
  }

  function positionDiscs() {
    const n = discsEls.length;
    discsEls.forEach((disc, i) => {
      const discAngle = (360 / n) * i;
      disc.style.transform = `rotateY(${discAngle}deg) translateZ(${radius}vw)`;
    });
  }

