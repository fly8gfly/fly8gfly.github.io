---
const discs = [
  { image: '/discs/Home.jpg', title: 'Home', link: '#' },
  { image: '/discs/youtube.jpg', title: 'YouTube Channels', link: '#' },
  { image: '/discs/Products.jpg', title: 'Products', link: '#' },
  { image: '/discs/flying-tips.jpg', title: 'Flying Tips', link: '#' },
];
---

<style>
  .carousel-wrapper {
    perspective: 1200px;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: #111;
  }

  .carousel {
    width: 300px;
    height: 300px;
    position: relative;
    transform-style: preserve-3d;
    transition: transform 1s ease;
  }

  .disc-cylinder {
    position: absolute;
    width: 100px;
    height: 150px;
    transform-style: preserve-3d;
    transform-origin: center center;
    transition: transform 1s ease;
  }

  .disc-face,
  .disc-spine,
  .disc-back {
    position: absolute;
    width: 100px;
    height: 150px;
    background: #222;
    border-radius: 10px;
    overflow: hidden;
    backface-visibility: hidden;
    box-shadow: 0 0 10px rgba(0,0,0,0.5);
  }

  .disc-face {
    transform: translateZ(15px);
    background: #333;
  }

  .disc-face img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .disc-spine {
    width: 30px;
    height: 150px;
    left: 35px;
    top: 0;
    transform: rotateY(90deg) translateZ(50px);
    background: #555;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    writing-mode: vertical-rl;
    text-orientation: mixed;
    font-size: 14px;
    font-weight: bold;
    box-shadow: inset 0 0 5px rgba(0,0,0,0.5);
  }

  .disc-back {
    transform: rotateY(180deg) translateZ(15px);
    background: #111;
  }

  .controls {
    margin-top: 2rem;
    display: flex;
    gap: 1rem;
  }

  button {
    padding: 0.5rem 1rem;
    background: #000;
    color: white;
    border: none;
    border-radius: 5px;
    font-size: 1.2rem;
  }

  @media (max-width: 500px) {
    .carousel {
      width: 250px;
      height: 250px;
    }

    .disc-cylinder {
      width: 80px;
      height: 120px;
    }

    .disc-face,
    .disc-back {
      width: 80px;
      height: 120px;
    }

    .disc-spine {
      width: 30px;
      height: 120px;
      left: 25px;
    }
  }
</style>

<div class="carousel-wrapper">
  <div class="carousel" id="carousel">
    {discs.map((disc, index) => (
      <a
        href={disc.link}
        class="disc-cylinder"
        style={`transform: rotateY(${index * 90}deg) translateZ(250px);`}
        data-index={index}
      >
        <div class="disc-face">
          <img src={disc.image} alt={disc.title} />
        </div>
        <div class="disc-spine">{disc.title}</div>
        <div class="disc-back"></div>
      </a>
    ))}
  </div>

  <div class="controls">
    <button onclick="rotateCarousel(-1)">◀</button>
    <button onclick="rotateCarousel(1)">▶</button>
  </div>
</div>

<script type="module">
  const carousel = document.getElementById('carousel');
  const total = 4;
  let currentIndex = 0;

  const cylinders = document.querySelectorAll('.disc-cylinder');

  function updateActiveDisc() {
    cylinders.forEach((el, idx) => {
      const angle = (idx - currentIndex + total) % total;
      if (angle === 0) {
        el.style.transform = `rotateY(${idx * 90}deg) translateZ(300px)`;
        el.style.zIndex = '2';
      } else {
        el.style.transform = `rotateY(${idx * 90}deg) translateZ(250px)`;
        el.style.zIndex = '1';
      }
    });
  }

  function rotateCarousel(direction) {
    currentIndex = (currentIndex + direction + total) % total;
    carousel.style.transform = `rotateY(${-90 * currentIndex}deg)`;
    updateActiveDisc();
  }

  updateActiveDisc();

  // Swipe Support for Mobile
  let startX = 0;
  carousel.addEventListener('touchstart', (e) => {
    startX = e.touches[0].clientX;
  });

  carousel.addEventListener('touchend', (e) => {
    const endX = e.changedTouches[0].clientX;
    const delta = endX - startX;
    if (Math.abs(delta) > 30) {
      rotateCarousel(delta > 0 ? -1 : 1);
    }
  });
</script>
