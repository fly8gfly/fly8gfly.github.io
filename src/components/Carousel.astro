---
import { onMount } from 'astro/client';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Disc Carousel</title>
    <style>
      body {
        margin: 0;
        background: #111;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        overflow: hidden;
      }

      .carousel-container {
        width: 100vw;
        height: 100vw;
        max-width: 600px;
        max-height: 600px;
        perspective: 1000px;
      }

      .carousel {
        width: 100%;
        height: 100%;
        position: relative;
        transform-style: preserve-3d;
        transition: transform 1s;
      }

      .spoke {
        position: absolute;
        width: 4px;
        height: 50%;
        background: #ccc;
        left: 50%;
        bottom: 50%;
        transform-origin: bottom;
      }

      .rim {
        position: absolute;
        width: 100%;
        height: 100%;
        border: 4px solid #888;
        border-radius: 50%;
        box-shadow: 0 0 15px #444;
      }

      .disc {
        position: absolute;
        width: 40%;
        height: 40%;
        transform-origin: center center;
        transform-style: preserve-3d;
      }

      .disc img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 50%;
        box-shadow: 0 5px 15px rgba(0,0,0,0.5);
      }

      .disc:nth-child(1) { transform: rotateY(0deg) translateZ(250px) rotateX(90deg); }
      .disc:nth-child(2) { transform: rotateY(90deg) translateZ(250px) rotateX(90deg); }
      .disc:nth-child(3) { transform: rotateY(180deg) translateZ(250px) rotateX(90deg); }
      .disc:nth-child(4) { transform: rotateY(270deg) translateZ(250px) rotateX(90deg); }
    </style>
  </head>
  <body>
    <div class="carousel-container">
      <div class="carousel" id="carousel">
        <div class="rim"></div>

        <!-- Spokes -->
        <div class="spoke" style="transform: rotate(0deg) translateY(-50%)"></div>
        <div class="spoke" style="transform: rotate(90deg) translateY(-50%)"></div>
        <div class="spoke" style="transform: rotate(180deg) translateY(-50%)"></div>
        <div class="spoke" style="transform: rotate(270deg) translateY(-50%)"></div>

        <!-- Discs -->
        <div class="disc"><img src="/discs/Home.jpg" alt="Home" /></div>
        <div class="disc"><img src="/discs/Products.jpg" alt="Products" /></div>
        <div class="disc"><img src="/discs/flying-tips.jpg" alt="Flying Tips" /></div>
        <div class="disc"><img src="/discs/youtube.jpg" alt="YouTube" /></div>
      </div>
    </div>

    <script>
      const carousel = document.getElementById('carousel');
      let angleY = 0;
      let isDragging = false;
      let lastX;

      function rotateCarousel(diff) {
        angleY += diff * 0.3;
        carousel.style.transform = `rotateY(${angleY}deg)`;
      }

      document.addEventListener('mousedown', (e) => {
        isDragging = true;
        lastX = e.clientX;
      });

      document.addEventListener('mousemove', (e) => {
        if (!isDragging) return;
        const deltaX = e.clientX - lastX;
        lastX = e.clientX;
        rotateCarousel(deltaX);
      });

      document.addEventListener('mouseup', () => {
        isDragging = false;
      });

      // Touch support
      document.addEventListener('touchstart', (e) => {
        isDragging = true;
        lastX = e.touches[0].clientX;
      });

      document.addEventListener('touchmove', (e) => {
        if (!isDragging) return;
        const deltaX = e.touches[0].clientX - lastX;
        lastX = e.touches[0].clientX;
        rotateCarousel(deltaX);
      });

      document.addEventListener('touchend', () => {
        isDragging = false;
      });
    </script>
  </body>
</html>
