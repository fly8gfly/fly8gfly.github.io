---
import BaseLayout from '../layouts/BaseLayout.astro';

const youtubeChannels = [
  {
    name: "MzeroA Flight Training",
    url: "https://www.youtube.com/user/MzeroAFlightTraining",
    description: "Practical flight training tutorials for student and private pilots."
  },
  {
    name: "Airplanes in the wild",
    url: "https://youtube.com/@airplanesinthewild?si=n9PmmYaJbcJjaR2S",
    description: "Real-world flying adventures and aviation education."
  },
  {
    name: "Fly8MA",
    url: "https://youtube.com/@fly8ma.comflighttraining199?si=JboToCqObSMNS4mf",
    description: "Clear explanations of aviation concepts for all levels."
  },
  {
    name: "Mike Patey",
    url: "https://youtube.com/@mikepatey?si=2rMlh1n8MavupUZO",
    description: "Mike Patey builds some of the most incredible aircraft."
  },
  {
    name: "Justin Sung",
    url: "https://youtube.com/@justinsung?si=GPeJRSyo86pcyPew",
    description: "Evidence based learning."
  },
];
---

<!-- Theme Preloader -->
<script is:inline>
  (function() {
    const theme = localStorage.getItem('theme') || 'light';
    if (theme === 'dark') {
      document.documentElement.setAttribute('data-theme', 'dark');
    } else {
      document.documentElement.removeAttribute('data-theme');
    }
  })();
</script>

<BaseLayout title="Fly8G - Recommended YouTube Channels">
  <section class="welcome">
    <h2>Recommended YouTube Channels for Pilots</h2>
    <p>
      Below is a curated list of YouTube channels offering valuable content to pilots and aviation enthusiasts. These channels cover everything from flight training tips to real-world flying experiences.
    </p>
  </section>

  <ul class="youtube-list">
    {youtubeChannels.map(channel => (
      <li class="youtube-card">
        <a href={channel.url} target="_blank" rel="noopener noreferrer">
          {channel.name}
        </a>
        <p>{channel.description}</p>
      </li>
    ))}
  </ul>
</BaseLayout>

<style>
  /* Body inherits from global variables */
  body {
    background: var(--bg);
    color: var(--text);
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    transition: background 0.3s ease, color 0.3s ease;
  }

  .welcome {
    text-align: center;
    padding: 3rem 1rem;
  }

  .welcome h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--text);
  }

  .welcome p {
    max-width: 700px;
    margin: 0 auto 2rem auto;
    line-height: 1.6;
    color: var(--text);
    font-size: 1.15rem;
  }

  .youtube-list {
    list-style: none;
    padding: 0;
    max-width: 700px;
    margin: 0 auto;
  }

  .youtube-card {
    margin-bottom: 1.75rem;
    background: var(--card-bg);
    padding: 1rem 1.5rem;
    border-radius: 8px;
    box-shadow: var(--shadow);
    transition: background 0.3s ease, color 0.3s ease;
  }

  .youtube-card a {
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--accent);
    text-decoration: none;
    display: inline-block;
  }

  .youtube-card a:hover {
    text-decoration: underline;
  }

  .youtube-card p {
    margin-top: 0.5rem;
    color: var(--text);
    font-size: 1rem;
  }
</style>
