---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';

import logo from '../public/logo.jpg';
import plane1 from '../public/planes/plane1.png';
import plane3 from '../public/planes/plane3.png';
import plane4 from '../public/planes/plane4.png';

// Reusable Card component
const Card = ({ href, imgSrc, imgAlt, title, description }) => (
  <a href={href} class="card" aria-label={`${title} section`}>
    <Image src={imgSrc} alt={imgAlt} width={120} height={120} loading="lazy" />
    <h3>{title}</h3>
    <p>{description}</p>
  </a>
);
---

<BaseLayout title="Fly8G - Home">
  <section aria-label="Welcome Section" class="welcome-section">
    <h2>
      Welcome to
      <Image src={logo} alt="Fly8G Logo" width={64} height={64} class="logo" />
    </h2>
    <p>Your premier destination for aviation products, flying tips, and inspiring content. Fly higher, fly smarter.</p>
  </section>

  <section class="card-grid">
    <Card
      href="/products"
      imgSrc={plane1}
      imgAlt="Products"
      title="Products"
      description="Explore our curated selection of aviation gear and supplements for pilots and enthusiasts."
    />
    <Card
      href="/youtube"
      imgSrc={plane3}
      imgAlt="YouTube Channel"
      title="YouTube"
      description="Watch tutorials, flight adventures, and tips on our Fly8G hand selected YouTube channels."
    />
    <Card
      href="/flying-tips"
      imgSrc={plane4}
      imgAlt="Flying Tips"
      title="Flying Tips"
      description="Improve your piloting skills with expert tips and best practices from seasoned aviators. Along with links to helpful websites that will inspire you to take flight in all your pursuits."
    />
  </section>
</BaseLayout>

<style>
  .welcome-section {
    text-align: center;
    padding: 4rem 1rem;
  }

  .welcome-section h2 {
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: 1rem;
    letter-spacing: 1.5px;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .welcome-section .logo {
    height: 4rem; /* Increased from 3rem to 4rem */
    user-select: none;
  }

  .welcome-section p {
    font-size: clamp(1rem, 2.5vw, 1.25rem);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
    color: #e0e0e0;
  }

  .card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 4rem;
    padding: 0 1rem;
  }

  .card {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    text-align: center;
    color: #fff;
    text-decoration: none;
    transition: background 0.3s ease, transform 0.2s ease;
  }

  .card:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-4px);
  }

  /* Note: Astro Image generates <img>, so style that */
  .card img {
    width: 120px;
    height: 120px;
    margin-bottom: 1.5rem;
    object-fit: cover;
  }

  .card h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .card p {
    font-size: 1rem;
    line-height: 1.5;
  }

  @media (max-width: 600px) {
    .welcome-section {
      padding: 2rem 1rem;
    }

    .card-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>
