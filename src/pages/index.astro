---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<!-- Theme Preloader Script -->
<script is:inline>
  (function() {
    const theme = localStorage.getItem('theme') || 'light';
    if (theme === 'dark') {
      document.documentElement.setAttribute('data-theme', 'dark');
    } else {
      document.documentElement.removeAttribute('data-theme');
    }
  })();
</script>

<BaseLayout title="Fly8G - Home">
  <section class="welcome" aria-label="Welcome Section">
    <h2>
      Welcome to 
      <img src="/logo.jpg" alt="Fly8G Logo" />
    </h2>
    <p>
      Your premier destination for aviation products, flying tips, and inspiring content.
    </p>
  </section>

  <section class="card-grid">
    <a href="/products" class="card">
      <img src="/planes/plane1.png" alt="Products" loading="lazy" />
      <h3>Products</h3>
      <p>Explore our curated selection of aviation gear for pilots and enthusiasts.</p>
    </a>

    <a href="/youtube" class="card">
      <img src="/planes/plane3.png" alt="YouTube Channel" loading="lazy" />
      <h3>YouTube</h3>
      <p>Watch tutorials, flight adventures, and tips on our Fly8G hand-selected YouTube channels.</p>
    </a>

    <a href="/flying-tips" class="card">
      <img src="/planes/plane4.png" alt="Flying Tips" loading="lazy" />
      <h3>Flying Tips</h3>
      <p>Improve your piloting skills with expert tips and best practices from seasoned aviators. Along with links to helpful websites that will inspire you to take flight in all your pursuits.</p>
    </a>
  </section>
</BaseLayout>

<style>
  /* Light mode variables */
  :root {
    --bg: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    --surface: #ffffff;
    --text: #111827;
    --muted: #1f2937;
    --accent: #2563eb;
    --header-bg: rgba(255, 255, 255, 0.95);
    --footer-bg: rgba(241, 245, 249, 0.95);
    --nav-bg: rgba(255, 255, 255, 0.98);
    --shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    --card-bg: rgba(255, 255, 255, 0.8);
    --backdrop: rgba(0, 0, 0, 0.5);
  }

  /* Dark mode variables */
  [data-theme="dark"] {
    --bg: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
    --surface: #1f2937;
    --text: #ffffff;
    --muted: #9ca3af;
    --accent: #3b82f6;
    --header-bg: rgba(17, 24, 39, 0.95);
    --footer-bg: rgba(31, 41, 55, 0.95);
    --nav-bg: rgba(17, 24, 39, 0.98);
    --shadow: 0 8px 20px rgba(0, 0, 0, 0.6);
    --card-bg: rgba(255, 255, 255, 0.05);
    --backdrop: rgba(0, 0, 0, 0.7);
  }

  /* Body */
  body {
    background: var(--bg);
    color: var(--text);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    transition: background 0.3s ease, color 0.3s ease;
  }

  /* Welcome Section */
  .welcome {
    text-align: center;
    padding: 4rem 1rem;
  }

  .welcome h2 {
    font-size: 3rem;
    margin-bottom: 1rem;
    letter-spacing: 1.5px;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .welcome h2 img {
    height: 10rem;
    user-select: none;
  }

  .welcome p {
    font-size: 1.25rem;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
    color: var(--text);
  }

  /* Card Grid */
  .card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 4rem;
  }

  .card {
    background: var(--card-bg);
    border-radius: 12px;
    padding: 2rem;
    box-shadow: var(--shadow);
    text-align: center;
    color: var(--text);
    text-decoration: none;
    transition: background 0.3s ease, color 0.3s ease;
  }

  .card img {
    width: 120px;
    margin-bottom: 1.5rem;
  }
</style>
